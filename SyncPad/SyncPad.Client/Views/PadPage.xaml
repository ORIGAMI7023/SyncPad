<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SyncPad.Client.ViewModels"
             xmlns:behaviors="clr-namespace:SyncPad.Client.Behaviors"
             xmlns:controls="clr-namespace:SyncPad.Client.Controls"
             x:Class="SyncPad.Client.Views.PadPage"
             x:Name="ThisPage"
             Title="SyncPad">

    <!-- 桌面端：侧边栏布局 | 移动端：标签页切换 -->
    <Grid Padding="0">
        <!-- 使用 OnIdiom 实现响应式布局 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- 右侧列：文件区域 -->
            <ColumnDefinition>
                <ColumnDefinition.Width>
                    <OnIdiom x:TypeArguments="GridLength">
                        <OnIdiom.Desktop>480</OnIdiom.Desktop>
                        <OnIdiom.Tablet>0</OnIdiom.Tablet>
                        <OnIdiom.Phone>0</OnIdiom.Phone>
                    </OnIdiom>
                </ColumnDefinition.Width>
            </ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!-- 左侧主区域（文本编辑） -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 顶部工具栏 -->
            <Grid Grid.Row="0" Padding="10">
                <Grid.BackgroundColor>
                    <AppThemeBinding Light="#F5F5F5" Dark="#2B2B2B" />
                </Grid.BackgroundColor>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 用户信息 -->
                <Label Grid.Column="0" VerticalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="用户: " FontAttributes="Bold"/>
                            <Span Text="{Binding Username}"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <!-- 刷新按钮 -->
                <Button Grid.Column="1"
                        Text="刷新"
                        Command="{Binding RefreshCommand}"
                        Margin="5,0"
                        BackgroundColor="#6C757D"
                        TextColor="White"
                        CornerRadius="4"
                        Padding="10,5"/>

                <!-- 登出按钮 -->
                <Button Grid.Column="2"
                        Text="登出"
                        Command="{Binding LogoutCommand}"
                        BackgroundColor="#DC3545"
                        TextColor="White"
                        CornerRadius="4"
                        Padding="10,5"/>
            </Grid>

            <!-- 文本编辑区域 -->
            <Editor Grid.Row="1"
                    Text="{Binding Content, Mode=TwoWay}"
                    Placeholder="在这里输入文本..."
                    FontSize="16"
                    Margin="10">
                <Editor.BackgroundColor>
                    <AppThemeBinding Light="White" Dark="#1E1E1E" />
                </Editor.BackgroundColor>
                <Editor.TextColor>
                    <AppThemeBinding Light="Black" Dark="White" />
                </Editor.TextColor>
            </Editor>

            <!-- 状态栏 -->
            <Grid Grid.Row="2" Padding="10">
                <Grid.BackgroundColor>
                    <AppThemeBinding Light="#F5F5F5" Dark="#2B2B2B" />
                </Grid.BackgroundColor>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 连接状态指示器 -->
                <Ellipse Grid.Column="0"
                         WidthRequest="12"
                         HeightRequest="12"
                         Fill="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                         VerticalOptions="Center"
                         Margin="0,0,5,0"/>

                <!-- 连接状态文本 -->
                <Label Grid.Column="1"
                       Text="{Binding ConnectionStatus}"
                       VerticalOptions="Center"
                       FontSize="12"
                       TextColor="Gray"/>
            </Grid>
        </Grid>

        <!-- 右侧文件区域（桌面端） -->
        <Grid Grid.Column="1" Padding="0">
            <Grid.BackgroundColor>
                <AppThemeBinding Light="White" Dark="#1E1E1E" />
            </Grid.BackgroundColor>
            <Grid.IsVisible>
                <OnIdiom x:TypeArguments="x:Boolean">
                    <OnIdiom.Desktop>True</OnIdiom.Desktop>
                    <OnIdiom.Tablet>False</OnIdiom.Tablet>
                    <OnIdiom.Phone>False</OnIdiom.Phone>
                </OnIdiom>
            </Grid.IsVisible>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 文件区域标题栏 -->
            <Grid Grid.Row="0" Padding="10">
                <Grid.BackgroundColor>
                    <AppThemeBinding Light="#E9ECEF" Dark="#2B2B2B" />
                </Grid.BackgroundColor>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Text="文件列表"
                       FontSize="16"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>

                <Button Grid.Column="1"
                        Text="上传"
                        Command="{Binding SelectFileCommand}"
                        BackgroundColor="#007BFF"
                        TextColor="White"
                        CornerRadius="4"
                        Padding="10,5"/>
            </Grid>

            <!-- 文件网格（自由定位布局） -->
            <Grid Grid.Row="1">
                <!-- 空状态 -->
                <StackLayout Padding="20" VerticalOptions="Center" IsVisible="{Binding HasNoFiles}">
                    <Label Text="暂无文件"
                           FontSize="14"
                           TextColor="Gray"
                           HorizontalTextAlignment="Center"/>
                </StackLayout>

                <!-- 文件自由网格 -->
                <controls:FileGridView ItemsSource="{Binding Files}"
                                      IsVisible="{Binding HasFiles}"
                                      x:Name="FileGridView">
                    <controls:FileGridView.GestureRecognizers>
                        <DropGestureRecognizer AllowDrop="True"
                                              DragOver="OnFileDragOver"
                                              Drop="OnFileDrop"/>
                    </controls:FileGridView.GestureRecognizers>

                    <controls:FileGridView.ItemTemplate>
                        <DataTemplate>
                            <!-- 文件项容器 -->
                            <Frame Padding="6"
                                   CornerRadius="4"
                                   HasShadow="False"
                                   BorderColor="{Binding IsSelected, Converter={StaticResource BoolToBorderColorConverter}}"
                                   Margin="1">
                                <Frame.BackgroundColor>
                                    <AppThemeBinding Light="Transparent" Dark="Transparent" />
                                </Frame.BackgroundColor>
                                <Frame.Behaviors>
                                    <behaviors:FileDragDropBehavior />
                                </Frame.Behaviors>
                                <Frame.GestureRecognizers>
                                    <DragGestureRecognizer CanDrag="True"
                                                          DragStarting="OnDragStarting"
                                                          DropCompleted="OnDropCompleted"/>
                                    <DropGestureRecognizer AllowDrop="True"
                                                          DragOver="OnCardDragOver"
                                                          Drop="OnCardDrop"/>
                                </Frame.GestureRecognizers>

                                <Grid RowSpacing="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="16"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- 文件图标和状态角标 -->
                                    <Grid Grid.Row="0">
                                        <!-- 文件图标 -->
                                        <Label Text="{Binding FileIcon}"
                                               FontSize="32"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>

                                        <!-- 状态角标 -->
                                        <Label Text="{Binding StatusBadge}"
                                               FontSize="12"
                                               HorizontalOptions="End"
                                               VerticalOptions="Start"
                                               Margin="0,-4,-4,0"
                                               IsVisible="{Binding StatusBadge, Converter={StaticResource StringNotEmptyConverter}}"/>

                                        <!-- 复选框（选择模式） -->
                                        <CheckBox IsChecked="{Binding IsSelected}"
                                                 HorizontalOptions="Start"
                                                 VerticalOptions="Start"
                                                 Margin="-8,-8,0,0"
                                                 Scale="0.8"
                                                 IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PadViewModel}}, Path=IsSelectionMode}">
                                            <CheckBox.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PadViewModel}}, Path=ToggleFileSelectionCommand}"
                                                                    CommandParameter="{Binding .}"/>
                                            </CheckBox.GestureRecognizers>
                                        </CheckBox>
                                    </Grid>

                                    <!-- 文件名 -->
                                    <Label Grid.Row="1"
                                           Text="{Binding FileName}"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="2"
                                           HorizontalTextAlignment="Center"/>

                                    <!-- 文件大小和状态 -->
                                    <Label Grid.Row="2"
                                           FontSize="10"
                                           TextColor="Gray"
                                           HorizontalTextAlignment="Center">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding FileSizeText}"/>
                                                <Span Text=" · "/>
                                                <Span Text="{Binding StatusText}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>

                                    <!-- 进度条（预载中时显示） -->
                                    <ProgressBar Grid.Row="3"
                                                Progress="{Binding DownloadProgress, Converter={StaticResource PercentToProgressConverter}}"
                                                ProgressColor="#007BFF"
                                                IsVisible="{Binding ShowProgress}"
                                                HeightRequest="4"/>

                                    <!-- 点击手势 -->
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnFileCardTapped"/>
                                        <TapGestureRecognizer NumberOfTapsRequired="2"
                                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PadViewModel}}, Path=OpenFileCommand}"
                                                            CommandParameter="{Binding .}"/>
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </controls:FileGridView.ItemTemplate>
                </controls:FileGridView>
            </Grid>

            <!-- 批量操作工具栏 -->
            <Grid Grid.Row="2" Padding="10" IsVisible="{Binding HasSelectedFiles}">
                <Grid.BackgroundColor>
                    <AppThemeBinding Light="#F8F9FA" Dark="#2B2B2B" />
                </Grid.BackgroundColor>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Text="{Binding SelectedFilesText}"
                       VerticalOptions="Center"
                       FontSize="12"/>

                <Button Grid.Column="1"
                        Text="复制"
                        Command="{Binding BatchCopyCommand}"
                        BackgroundColor="#17A2B8"
                        TextColor="White"
                        CornerRadius="4"
                        Padding="8,5"
                        Margin="5,0"
                        FontSize="12"/>

                <Button Grid.Column="2"
                        Text="导出"
                        Command="{Binding BatchExportCommand}"
                        BackgroundColor="#FFC107"
                        TextColor="Black"
                        CornerRadius="4"
                        Padding="8,5"
                        Margin="5,0"
                        FontSize="12"/>

                <Button Grid.Column="3"
                        Text="下载"
                        Command="{Binding BatchDownloadCommand}"
                        BackgroundColor="#28A745"
                        TextColor="White"
                        CornerRadius="4"
                        Padding="8,5"
                        Margin="5,0"
                        FontSize="12"/>

                <Button Grid.Column="4"
                        Text="删除"
                        Command="{Binding BatchDeleteCommand}"
                        BackgroundColor="#DC3545"
                        TextColor="White"
                        CornerRadius="4"
                        Padding="8,5"
                        Margin="5,0"
                        FontSize="12"/>

                <Button Grid.Column="5"
                        Text="取消"
                        Command="{Binding ClearSelectionCommand}"
                        BackgroundColor="#6C757D"
                        TextColor="White"
                        CornerRadius="4"
                        Padding="8,5"
                        FontSize="12"/>
            </Grid>
        </Grid>
    </Grid>

</ContentPage>
